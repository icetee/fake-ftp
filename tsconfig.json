{
  "compilerOptions": {
    "outDir": "build",
    "sourceMap": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": false,
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "lib": [
      "es2017",
    ]
  },
  "include": [
    "./src/",
    "./test/"
  ],
  "exclude": [
    "node_modules"
  ]
}
